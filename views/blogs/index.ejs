<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

<body>
    <%- include('../partials/nav.ejs') %>

    <div class="blogs content">
        <h2>All blogs</h2>

        <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
        <div class="single">
            <a class="single" href="/blogs/<%= blog._id %>">
                <h3 class="title"><%= blog.title %></h3>
                <p><%= blog.snippet %></p>

            </a>
        </div>
        <% }) %>
        <% } else { %>
        <p>No blog post to display....</p>
        <% } %>
    </div>

    <%- include('../partials/footer.ejs') %>

</body>

</html>